@model MyShoppingApp.Models.Product
@{
    ViewData["Title"] = "AddProduct";
}

<a asp-controller="Product" asp-action="index" class="btn-outline-primary">
    Back to products
</a>



<h1>AddProduct</h1>

<div>
    <form method="post">
        <div class="form-group">
            <label>Product Name</label>
            <input asp-for="Name" type="text" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Product Desc</label>
            <input asp-for="Description" type="text"  class="form-control" />
        </div>
        <div class="form-group">
            <label>Product Category</label>
            <input asp-for="Category" type="text" class="form-control" />
        </div>
            <input type="submit" value="save" class="btn btn-primary" />
            <input type="button" value="reset" class="btn btn-secondary" />
    </form>
    <hr />
  
</div>
@{
    if (ViewBag.message != null)
    {
        <h2 class="alert alert-success">@ViewBag.message</h2>
    }
}